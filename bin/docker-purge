#!/bin/bash

if [ $DOCKER_HOST ]; then
    echo ""
    echo "Refusing to run on remote host ($DOCKER_HOST), sorry"
    echo ""
    exit 1
fi

clean_containers() {
    arg=$1
    containers=$(docker ps -a -q)
    if [ -n "$containers" ]; then
        docker rm $arg $containers
    fi
}

clean_images() {
    arg=$1
    images=$(docker images -q)
    if [ -n "$images" ]; then
        docker rmi $arg $images
    fi
}

clean_containers
clean_containers -f

clean_images
clean_images -f
